#define ALPHAS 0
#define DIGITS 1
#define SYMBLS 2
#define FUNCTS 3
#define SCROLL 4
#define LOWDPI 5
#define M_BTNS 6

#include <behaviors/mouse_keys.dtsi>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/mouse.h>
//#include <input/processors.dtsi>

&lt {
    tapping-term-ms = <240>;
    flavor = "balanced";
    quick-tap-ms = <150>;
};

&mt {
    tapping-term-ms = <200>;
    flavor = "tap-preferred";
    quick-tap-ms = <150>;
};

&sk {
   release-after-ms = <2000>;
   quick-release;
   lazy;
};

&caps_word { continue-list = <UNDERSCORE MINUS>; };

/ {

    behaviors {

    };

    combos {
        compatible = "zmk,combos";
        combo_mouse_middle_click {
            timeout-ms = <100>;
            key-positions = <36 37>;
            layers = <ALPHAS SYMBLS FUNCTS SCROLL LOWDPI>; //todo: change to space+enter = tab
            bindings = <&mkp MB3>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

