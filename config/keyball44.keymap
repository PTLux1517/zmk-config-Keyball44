#define ALPHAS 0
#define DIGITS 1
#define SYMBLS 2
#define FUNCTS 3
#define M_BTNS 4
#define SCROLL 5
#define LOWDPI 6

#include <behaviors/mouse_keys.dtsi>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/mouse.h>
//#include <input/processors.dtsi>

&lt {
    tapping-term-ms = <240>;
    flavor = "balanced";
    quick-tap-ms = <150>;
};

&sk {
   release-after-ms = <2000>;
   quick-release;
   lazy;
};

&caps_word { continue-list = <UNDERSCORE MINUS>; };

/ {

    behaviors {
        morph_SPACEUNDER: morph_space_underscore {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            bindings = <&kp SPACE>, <&kp UNDER>;
            mods = <(MOD_LSFT)>;
        };
        morph_FBSLH: morph_forwardslash_backslash {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            bindings = <&kp KP_DIVIDE>, <&kp BSLH>;
            mods = <(MOD_LSFT)>;
        };
        morph_LPARBKT: morph_leftparenthesis_leftbracket {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            bindings = <&kp LPAR>, <&kp LBKT>;
            mods = <(MOD_LSFT)>;
        };
        morph_RPARBKT: morph_rightparenthesis_rightbracket {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            bindings = <&kp RPAR>, <&kp RBKT>;
            mods = <(MOD_LSFT)>;
        };
        td0: tap_dance_0 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&sk LSHFT>, <&kp CAPS>;
        };
    };

    combos {
        compatible = "zmk,combos";
        combo_tab {
            timeout-ms = <100>;
            key-positions = <41 42>;
            layers = <ALPHAS SYMBLS FUNCTS M_BTNS SCROLL LOWDPI>;
            bindings = <&kp TAB>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

// ------------------------------------------------------------------------------------------------------------------------------ EMPTY LAYER TEMPLATES FOR COPY-PASTE -----------------------------------------------------------------------------------------------------------------------------
